set -e

spinner() {
    local pid=$1 delay=0.1 spinstr='|/-\'
    while kill -0 $pid 2>/dev/null; do
        local temp=${spinstr#?}
        printf " [%c] Checking clippy...  " "$spinstr"
        spinstr=$temp${spinstr%$temp}
        sleep $delay
        printf "\r"
    done
    printf "    \r"
}

echo "ğŸ” Checking for warnings (clippy)..."

# Show all warnings in the workspace (doesn't fail the script)
cargo clippy --all-targets --all-features --workspace &
show_pid=$!

# Strict check â€” fail if any warnings exist (Ñ„Ğ¾Ğ½)
cargo clippy --all-targets --all-features --workspace -- -D warnings >/dev/null 2>&1 &
strict_pid=$!

wait $show_pid

if kill -0 $strict_pid 2>/dev/null; then
    spinner $strict_pid
fi

wait $strict_pid || {
    echo "âŒ Clippy warnings detected. Please fix them before committing!"
    exit 1
}

echo "ğŸ§¹ Checking formatting (rustfmt)..."
cargo fmt --check

echo "âœ… Running tests..."
cargo test

echo "ğŸ‰ All checks passed successfully!"
